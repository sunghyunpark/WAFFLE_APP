<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cafemobile.waffle.MainActivity">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    </FrameLayout>

    <!--Bottom Tab Layout -->
    <RelativeLayout
        android:id="@+id/bottom_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tab_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tab1_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tab1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAFE"
                    android:textSize="11dp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/tab1_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tab2_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tab2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT"
                    android:textSize="11dp"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/tab2_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tab3_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tab3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아요"
                    android:layout_marginTop="3dp"
                    android:textSize="11dp"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/tab3_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tab4_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tab4_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MY"
                    android:layout_marginTop="3dp"
                    android:textSize="11dp"
                    android:textColor="@color/colorGray"
                    android:layout_below="@+id/tab4_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:layout_above="@+id/bottom_tab_menu"
        android:background="@color/colorDivider"></LinearLayout>

</RelativeLayout>
