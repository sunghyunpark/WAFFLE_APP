<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cafemobile.waffle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".WaffleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.IntroActivity" />
        <activity android:name="view.RegisterActivity" />
        <activity android:name="view.LoginActivity" />
        <activity android:name="view.LoadingDialog" />
        <activity android:name="view.AboutCafeActivity" />
        <activity android:name="view.WriteCommentActivity" />
        <activity android:name="view.AboutCafeCommentActivity" />
        <activity android:name="view.MyCommentCafeActivity"></activity>
    </application>

</manifest>